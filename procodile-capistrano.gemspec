Gem::Specification.new do |s|
  s.name          = "procodile-capistrano"
  s.description   = %q{Capistrano scripts for deploying applications with Procodile.}
  s.summary       = s.description
  s.homepage      = "https://github.com/adamcooke/procodile-capistrano"
  s.version       = '1.0.3'
  s.files         = Dir.glob("{lib}/**/*")
